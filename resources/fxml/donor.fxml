<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="400" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DonorController">
    
    
    <Label layoutX="20" layoutY="10" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Food Donation Form" />
    
    
    <Label layoutX="20" layoutY="50" text="Food Name:" />
    <TextField fx:id="foodName" layoutX="120" layoutY="45" prefWidth="250" />
    
   
    <Label layoutX="20" layoutY="90" text="Quantity:" />
    <TextField fx:id="quantity" layoutX="120" layoutY="85" prefWidth="80" />
    
   
    <Label layoutX="220" layoutY="90" text="Unit:" />
    <TextField fx:id="unit" layoutX="260" layoutY="85" prefWidth="110" />
    
   
    <Label layoutX="20" layoutY="130" text="Prepared At:" />
    <DatePicker fx:id="preparedAt" layoutX="120" layoutY="125" />
    
    
    <Label layoutX="20" layoutY="170" text="Expires At:" />
    <DatePicker fx:id="expiresAt" layoutX="120" layoutY="165" />
    
    <Label layoutX="20" layoutY="320" text="Amount:" />
    <TextField fx:id="amount" layoutX="120" layoutY="315" prefWidth="250" />

    <Label layoutX="20" layoutY="210" text="Location:" />
    <TextField fx:id="locationField" layoutX="120" layoutY="205" prefWidth="250" />
    
    
    <Label layoutX="20" layoutY="250" text="Notes:" />
    <TextArea fx:id="notes" layoutX="120" layoutY="245" prefHeight="60" prefWidth="250" />
    
    
    <Button fx:id="submitDonation" layoutX="125.0" layoutY="355.0" prefHeight="30" prefWidth="150" text="Submit Donation" />
    
</AnchorPane>
