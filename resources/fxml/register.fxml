<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.RegisterController"
           stylesheets="@../css/register.css"
           prefWidth="800" prefHeight="600"
           styleClass="root">

    <HBox spacing="0" prefWidth="800" prefHeight="600">

        <VBox alignment="CENTER_LEFT" spacing="10" prefWidth="300" styleClass="register-left">
            <Label text="Welcome to" styleClass="brand-subtitle"/>
            <Label text="food4All" styleClass="brand-title"/>
            <Label text="a food donation system" styleClass="brand-subsubtitle"/>
        </VBox>

        <VBox alignment="CENTER" spacing="15" prefWidth="500" styleClass="register-card">
            <Label text="Register" styleClass="register-title"/>

            <GridPane hgap="10" vgap="10" maxWidth="400">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="nameField" promptText="Enter your name" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Email:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="emailField" promptText="Enter your email" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Phone:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="phoneField" promptText="Enter your phone number" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Address:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="addressField" promptText="Enter your address" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Password:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Confirm Password:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="form-label"/>
                <PasswordField fx:id="confirmField" promptText="Confirm your password" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="form-field"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER">
                <RadioButton fx:id="restaurantRadio" text="Restaurant" styleClass="form-radio"/>
                <RadioButton fx:id="volunteerRadio" text="Volunteer" styleClass="form-radio"/>
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Button text="Back" onAction="#onBack" styleClass="btn"/>
                <Button text="Register" onAction="#onRegister" styleClass="btn"/>
            </HBox>

            <Label fx:id="status" styleClass="status-label"/>
        </VBox>

    </HBox>
</StackPane>
