<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="rootPane"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.LoginController"
           stylesheets="@../css/login.css"
           styleClass="root">

    <HBox spacing="0" alignment="CENTER" prefWidth="800" prefHeight="600">

        <VBox alignment="CENTER" spacing="10" prefWidth="400" styleClass="login-left">
            <Label text="Welcome to" styleClass="brand-subtitle"/>
            <Label text="food4All" styleClass="brand-title"/>
            <Label text="a food donation system" styleClass="brand-subsubtitle"/>
        </VBox>

        <VBox alignment="CENTER" spacing="25" prefWidth="480" styleClass="login-card">
            <Label text="Login" styleClass="login-title"/>

            <GridPane hgap="10" vgap="15" maxWidth="400">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Email or Phone:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="form-label"/>
                <TextField fx:id="usernameField" promptText="Enter your email or phone" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="form-field"/>

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-field"/>
            </GridPane>

            <HBox spacing="20" alignment="CENTER">
                <RadioButton fx:id="restaurantRadio" text="Restaurant" styleClass="form-radio"/>
                <RadioButton fx:id="volunteerRadio" text="Volunteer" styleClass="form-radio"/>
            </HBox>

            <HBox spacing="30" alignment="CENTER">
                <Button text="Back" onAction="#onBack" styleClass="btn"/>
                <Button fx:id="loginButton" text="Login" onAction="#onLogin" styleClass="btn"/>
            </HBox>

            <Label fx:id="status" styleClass="status-label"/>
        </VBox>

    </HBox>
</StackPane>
